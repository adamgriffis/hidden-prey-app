<h1>Listing moves for <%= current_player.username %></h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Turn</th>
      <th>Link</th>
    </tr>
  </thead>

  <tbody>
    <% @moves.each do |move| %>
      <tr>
        <% if move.player_id == current_player.id %>
        <td><%= Game.find(Turn.find(move.turn_id).game_id).name %></td>
        <td><%= Turn.find(move.turn_id).id %></td>
        <td><%= link_to 'Show', move %></td>
        <% end %>
        <!--<td><%= link_to 'Edit', edit_move_path(move) %></td>
        <td><%= link_to 'Destroy', move, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>


<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => "form"}) do |f| %>

  <div class="form-group"><%= f.label :email, :class => "sr-only"%>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Enter Email", :class => "form-control"%></div>

  <div class="form-group"><%= f.label :password, :class => "sr-only" %>
  <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group"><label>Remember Me <%= f.check_box :remember_me, :class => "form-inline"  %></label></div>
  <% end -%>

  <div class="form-group"><%= f.submit "Sign in", :class=> "btn btn-primary"%></div>
<% end %>

<%= render "devise/shared/links" %>
